<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Icon -->
    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_navigation"
        app:tint="@color/accent_blue"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Nama Halte Keberangkatan -->
    <TextView
        android:id="@+id/tvNamaHalteDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Terminal Condongcatur"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/imgIcon"
        app:layout_constraintStart_toEndOf="@id/imgIcon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Koridor Keberangkatan -->
    <TextView
        android:id="@+id/tvKoridorDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3A • 3B • 1A"
        android:textColor="#2F80ED"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaHalteDetail"
        app:layout_constraintStart_toStartOf="@id/tvNamaHalteDetail" />

    <!-- Jarak ke Halte Keberangkatan -->
    <TextView
        android:id="@+id/tvJarakDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="850 m • 11 menit jalan kaki"
        android:textColor="#A0A0A0"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvKoridorDetail"
        app:layout_constraintStart_toStartOf="@id/tvNamaHalteDetail" />

    <!-- Input Halte Tujuan -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTujuan"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Pilih Halte Tujuan"
        app:layout_constraintTop_toBottomOf="@id/imgIcon">

        <AutoCompleteTextView
            android:id="@+id/actvTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:backgroundTint="@color/input_background"
            android:textColor="@color/white"
            android:theme="@style/AppTheme.Dropdown"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tombol Bayar (muncul setelah rute dipilih) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBayar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Bayar"
        android:textColor="#FFFFFF"
        app:cornerRadius="16dp"
        android:backgroundTint="@color/accent_blue"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tilTujuan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>